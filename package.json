{
  "name": "aily-blockly",
  "version": "0.5.2",
  "author": "coloz",
  "description": "aily blockly dev",
  "main": "electron/main.js",
  "build": {
    "publish": [
      {
        "provider": "generic",
        "url": "https://dl.diandeng.tech/blockly"
      }
    ],
    "appId": "blockly.aily.pro",
    "forceCodeSigning": false,
    "asar": false,
    "directories": {
      "output": "dist/aily-blockly/"
    },
    "files": [
      "!**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "dist/aily-blockly/browser",
        "to": "app/renderer"
      },
      {
        "from": "electron",
        "to": "app/electron"
      },
      {
        "from": "child",
        "to": "app/child",
        "filter": [
          "**/*",
          "!node/**"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "sign": false,
      "signAndEditExecutable": true,
      "artifactName": "aily-blockly-${version}.${ext}",
      "icon": "public/icon.ico",
      "fileAssociations": [
        {
          "ext": "abi",
          "name": "Aily Blockly Project",
          "description": "Aily Blockly Project File",
          "icon": "public/icon.ico",
          "role": "Editor"
        }
      ]
    },
    "mac": {
      "icon": "public/icon.ico",
      "fileAssociations": [
        {
          "ext": "abi",
          "name": "Aily Blockly Project",
          "description": "Aily Blockly Project File",
          "role": "Editor"
        }
      ]
    },
    "linux": {
      "icon": "public/icon.ico",
      "fileAssociations": [
        {
          "ext": "abi",
          "name": "Aily Blockly Project",
          "description": "Aily Blockly Project File",
          "mimeType": "application/x-aily-blockly-project"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "perMachine": true,
      "allowElevation": true,
      "deleteAppDataOnUninstall": true,
      "include": "build/installer.nsh",
      "runAfterFinish": false,
      "differentialPackage": false,
      "artifactName": "aily-blockly-Setup-${version}.${ext}",
      "createStartMenuShortcut": true,
      "shortcutName": "aily blockly"
    }
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve --proxy-config proxy.conf.json",
    "watch": "ng build --watch --configuration development",
    "electron": "concurrently \"npm start\" \"wait-on tcp:4200 && electron ./electron/main.js --serve\"",
    "build": "ng build --base-href ./ && electron-builder build"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.0.0",
    "@angular/common": "^19.0.0",
    "@angular/compiler": "^19.0.0",
    "@angular/core": "^19.0.0",
    "@angular/forms": "^19.0.0",
    "@angular/platform-browser": "^19.0.0",
    "@angular/platform-browser-dynamic": "^19.0.0",
    "@angular/router": "^19.0.0",
    "@blockly/block-dynamic-connection": "^0.7.16",
    "@blockly/field-colour-hsv-sliders": "^5.0.19",
    "@ctrl/tinycolor": "^4.1.0",
    "@joint/core": "^4.1.3",
    "@lydell/node-pty": "^1.1.0",
    "@ngx-translate/core": "^16.0.3",
    "@types/uuid": "^10.0.0",
    "@wokwi/elements": "^1.7.0",
    "@xterm/addon-clipboard": "^0.1.0",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/xterm": "^5.5.0",
    "angular-gridster2": "^19.0.0",
    "angular2-draggable": "^16.0.0",
    "animate.css": "^4.1.1",
    "avr8js": "^0.20.1",
    "blockly": "^11.2.2",
    "buffer": "^6.0.3",
    "cropperjs": "^1.6.2",
    "dragselect": "^2.7.4",
    "fancy-ansi": "^0.1.3",
    "install": "^0.13.0",
    "lightweight-charts": "^4.2.3",
    "loaders.css": "^0.1.2",
    "marked": "^15.0.12",
    "marked-highlight": "^2.2.1",
    "monaco-editor": "^0.52.2",
    "ng-zorro-antd": "^19.0.1",
    "npm": "^11.2.0",
    "pinyin-pro": "^3.26.0",
    "rxjs": "~7.8.0",
    "shiki": "^3.5.0",
    "simplebar-angular": "^3.3.0",
    "tslib": "^2.3.0",
    "uuid": "^11.1.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.0.0",
    "@angular/cli": "^19.0.0",
    "@angular/compiler-cli": "^19.0.0",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^22.10.7",
    "concurrently": "^9.1.2",
    "electron": "^35.0.2",
    "electron-builder": "^25.1.8",
    "jasmine-core": "~5.4.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.6.2",
    "wait-on": "^8.0.2"
  }
}
